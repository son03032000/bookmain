

<%- include('../../partials/header') %> 

<%- include('../../partials/adminNav') %> 

<%- include('../../partials/alerts') %> 


<div class="container my-4">
  <div class="row justify-content-center">
      <div class="col-md-7">
          <div class="card">
            <div class="card-header text-center">
              <h4>Add Author</h4>
            </div>
              <div class="card-block">
                <form class="p-3" action="/admin/authors/add" method="POST" enctype="multipart/form-data">                      

                    <div class="form-group">
                      <label class="form-control-label" for="first_name">First Name:</label>
                      <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First name (Christian) last"  required="true" >
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="last_name">Last Name:</label>
                        <input type="text" id="last_name" name="last_name" placeholder="last name (surname)" class="form-control" required="true">
                    </div>
                  
                  <div class="form-group">
                      <label class="form-control-label" for="date_of_birth">Date of birth:</label>
                      <input class="form-control" type="date" id="date_of_birth" name="date_of_birth" required="true" >
                                                                                                      
                  </div>
                  
                  <div class="form-group">
                      <label class="form-control-label" for="date_of_death">date_of_death:</label>
                      <input class="form-control" type="date" id="date_of_death" name="date_of_death" required="true">
                  </div>
                  <div class="form-group">
                    <label class="form-control-label" for="coverImg">Image Cover</label>
                    <input type="file" name="image" class="form-control p-0 h-30" required="true">
                  </div>
                  <div class="form-group">
                    <label class="form-control-label" for="describe">Author describe</label>
                    <input type="textarea" id="describe" class="form-control" placeholder="describe" required="true" name="describe">
                  </div>  

                  <button type="submit" class="btn btn-primary btn-block">Add Author</button>
                </form>
              </div>
          </div>
      </div>
  </div>
</div>

<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>



  
