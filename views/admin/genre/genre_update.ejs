

<%- include('../../partials/header') %> 

<%- include('../../partials/adminNav') %> 

<%- include('../../partials/alerts') %> 


<div class="container my-4">
  <div class="row justify-content-center">
      <div class="col-md-7">
          <div class="card">
            <div class="card-header text-center">
              <h4>Update Genre</h4>
            </div>
              <div class="card-block">
                <form class="p-3" action="/admin/genre/update/<%=genre._id%>" method="POST">                      

                    <div class="form-group">
                      <label class="form-control-label" for="name">Thể loại:</label>
                      <input type="text" class="form-control" id="name" name="name" placeholder="Fantasy, Poetry etc." value="<%= (undefined===genre ? '' :  genre.name)%>" required="true">
                    </div>
                    <div class="form-group">
                      <label class="form-control-label">Genre describe</label>
                      <textarea name="describe" cols="30" rows="10" class="form-control" id="describe"><%=genre.describe%></textarea>
                    </div>
                  <button type="submit" class="btn btn-primary btn-block">Update Genre</button>
                </form>
              </div>
          </div>
      </div>
  </div>
</div>

<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>

<script>
  CKEDITOR.replace( 'describe' );
</script>


  
