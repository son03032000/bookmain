<header id="main-header" class="py-2 bg-info text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1><i class="fa fa-users"></i> Users</h1>
        </div>
      </div>
    </div>
  </header>
  
  <!-- ACTIONS -->
  <section id="actions" class="py-4 mb-4">
    <div class="container">
      <div class="row">
        <div class="col-md-3 mr-auto">
            <a href="/user/1" class="btn btn-light btn-block">
            <i class="fa fa-arrow-left"></i> Back To Dashboard
          </a>
        </div>
        <div class="col-md-6">
          <form action="/users/friend/1" method="POST">
             <div class="input-group">
              <input name="searchUser" type="text" class="form-control" placeholder="Search User by First Name, Last Name, username, E-mail">
              <span class="input-group-btn">
                <button class="btn btn-primary">Search</button>
              </span>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  
<%- include('../partials/alerts') %> 

<!-- USERS -->
<section id="users">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h4>Users</h4>
            </div>
            <table class="table table-striped">
              <thead class="thead-inverse">
                <tr>
                  <th>Name</th>
                  <th>User name</th>
                  <th>avarta</th>
                  <th>Email</th>
                   <th>Gender</th>
                  <th>Date make friend</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                
              <% users.forEach(user => { %>
                <%if (user.isAdmin ) return; %>
                  <tr>
                  <td><%=user.firstName + " " + user.lastName%></td>
                  <td><img src="<%=user.image%>"%>" class="card-img-top rounded-circle" style = "width: 100px;height: 100px;"></td>
                  <td><a href="/users/profile/<%=user._id%>" title="Visit this user"><%=user.username%></a></td>
                  <td><%=user.email%></td>
                   <td><%=user.gender%></td>
                  <td><%=user.joined.toDateString()%>     
                </tr>
             
              <% }); %>
              </tbody>
            </table>
  
            <% if (pages > 0) { %>
              <nav class="mx-auto mb-2">
                <ul class="pagination ">       
              <% if (current == 1) { %>
                  <li class="page-item disabled"><a class="page-link">First</a></li>
              <% } else { %>
                  <li class="page-item"><a href="/users/friend/1" class="page-link">First</a></li>
              <% } %>
              <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                  <% if (i !== 1) { %>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                  <% } %>
                  <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                      <% if (i == current) { %>
                        <li class="page-item active"><a class="page-link"><%= i %></a></li>
                      <% } else { %>
                        <li class="page-item"><a class="page-link" href="/users/friend/<%= i %>"> <%= i %></a> </li>
                      <% } %>
                      <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                      <% } %>
                      <% if (current == pages) { %>
                          <li class="page-item disabled"><a class="page-link">Last</a></li>
                      <% } else { %>
                          <li class="page-item"><a href="/users/friend/<%= pages %>" class="page-link">Last</a></li>
                  <% } %>
              </ul>
            </nav>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
  

<%- include('../partials/footer') %> 